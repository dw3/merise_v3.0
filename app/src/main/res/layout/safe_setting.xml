<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!--头布局-->
    <include
        android:id="@+id/topTitle"
        layout="@layout/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />


    <!--主界面-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topTitle"
        android:orientation="vertical">

        <!--手势密码-->
        <LinearLayout
            android:id="@+id/li_gesture_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_100px"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:text="@string/gesture_code"
                    android:textSize="@dimen/text_size_26" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_40px"
                    android:src="@drawable/next" />

                <include
                    layout="@layout/layout_horizontal_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true" />


            </RelativeLayout>


        </LinearLayout>

        <!--指纹密码-->
        <LinearLayout
            android:id="@+id/ll_finger_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_100px"
            android:background="@color/white"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:text="@string/finger_code"
                    android:textSize="@dimen/text_size_26" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_40px"
                    android:src="@drawable/next" />


                <include
                    layout="@layout/layout_horizontal_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

        </LinearLayout>

        <!--修改密码-->
        <LinearLayout
            android:id="@+id/change_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_100px"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:text="@string/change_code"
                    android:textSize="@dimen/text_size_26" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_40px"
                    android:src="@drawable/next" />


                <include
                    layout="@layout/layout_horizontal_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

        </LinearLayout>


        <!--修改手机号-->
        <LinearLayout
            android:id="@+id/change_phone_num"
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_100px"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:text="@string/change_phone"
                    android:textSize="@dimen/text_size_26" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_40px"
                    android:src="@drawable/next" />


                <include
                    layout="@layout/layout_horizontal_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

        </LinearLayout>

        <!--完善资料-->
        <LinearLayout
            android:id="@+id/li_perfect_message"
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_100px"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:text="@string/perfect_info"
                    android:textSize="@dimen/text_size_26" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/margin_40px"
                    android:src="@drawable/next" />

                <include
                    layout="@layout/layout_horizontal_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>