<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_click_bg_selector"
    android:orientation="vertical"
    android:focusable="true"
    android:gravity="center"
    android:clickable="true">

    <ImageView
        android:layout_marginTop="@dimen/main_item2_margin_top"
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/all" />

    <TextView
        android:layout_marginTop="@dimen/main_item_margin_bottom"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/main_item2_text_size"
        android:textColor="@color/deviceNameTextColor"
        android:layout_marginBottom="@dimen/main_item_margin_bottom"
        android:text="全部" />
</LinearLayout>